<p id="notice"><%= notice %></p>

<div class="col-lg-6 col-lg-offset-3">
  <h1> <%= @task_list.title %> </h1>
  <p> <%= @task_list.description %> </p>

  <div id="tasks-wrapper">
    <% @task_list.tasks.each do |task| %>
    <%= render partial: "tasks/task", locals: {task: task} %>
    <% end %>
    <div id="form">
      <%= render "tasks/form" %>
    </div>
  </div>

  <%= link_to '<<Back', user_task_lists_path %> |
  <%= link_to 'Edit List', edit_user_task_list_path %> |
  <%= link_to "Delete List", user_task_list_path(@user, @task_list.id), method: :delete, data: { confirm: "are you sure?" } %>
</div>
